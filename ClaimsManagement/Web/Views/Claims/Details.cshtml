@model Data.DTOs.ClaimDto
@{
    ViewData["Title"] = "Details";
}

<h3>Claim Details</h3>
<div>
    <form asp-controller="Claims" asp-action="Update" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <input type="hidden" asp-for="CreatedAt" value="@Model.CreatedAt" disabled="disabled" class="form-control" />
            <input type="hidden" asp-for="BoardingPassImage" value="@Model.BoardingPassImage" disabled="disabled" class="form-control" />
            <div class="form-group col-5">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" disabled="disabled" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group col-5">
                <label asp-for="Category" class="control-label"></label><br>
                <select asp-for="Category" disabled="disabled" class="form-control btn-primary">
                    <option value="Baggage Delay">Baggage Delay</option>
                    <option value="Baggage Damage">Baggage Damage</option>
                    <option value="Baggage Loss">Baggage Loss</option>
                    <option value="Flight Delay">Flight Delay</option>
                    <option value="Flight Cancellation">Flight Cancellation</option>
                    <option value="Payment Error">Payment Error</option>
                    <option value="Voluntary Cancellation">Voluntary Cancellation</option>
                    <option value="Service Complaint">Service Complaint</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-5">
                <label asp-for="Airline" class="control-label"></label><br>
                <select asp-for="Airline" disabled="disabled" class="form-control btn-primary">
                    <option value="Fast Fly">Fast Fly</option>
                    <option value="Safe Ways">Safe Ways</option>
                    <option value="Quick Travels">Quick Travels</option>
                    <option value="Happy Air">Happy Air</option>
                    <option value="Costly Air">Costly Air</option>
                    <option value="Great Flies">Great Flies</option>
                </select>
                <span asp-validation-for="Airline" class="text-danger"></span>
            </div>
            <div class="form-group col-5">
                <label class="control-label"> Flight Number</label>
                <input asp-for="FlightNumber" disabled="disabled" class="form-control" />
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-5">
                <label class="control-label">Departure Airport</label>
                <input asp-for="DepartureAirport" disabled="disabled" class="form-control" />
                <span asp-validation-for="DepartureAirport" class="text-danger"></span>
            </div>
            <div class="form-group col-5">
                <label class="control-label">Arrival Airport</label>
                <input asp-for="ArrivalAirport" disabled="disabled" class="form-control" />
                <span asp-validation-for="ArrivalAirport" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-5">
                <label class="control-label">Flight Date</label>
                <input asp-for="FlightDate" type="date" disabled="disabled" class="form-control" />
                <span asp-validation-for="FlightDate" class="text-danger"></span>
            </div>
            @if (Model.BoardingPassImage != null)
            {
                <img src="data:image/jpg;base64,@(Html.Raw(Convert.ToBase64String(Model.BoardingPassImage)))" width="500" height="390" />
            }
            <div class="form-group col-5">
                <label class="control-label"> Boarding Pass Image</label><br>
                <input type="file" asp-for="BPImage" disabled="disabled">
                <span asp-validation-for="BPImage" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-3">
                *<a href="https://www.iso.org/obp/ui/#search/code/" target="_blank">ISO (Alpha-2) Country Code</a>
                <input asp-for="CountryCode" disabled="disabled" class="form-control" style="margin-top: 8px;" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
            <div class="form-group col-5">
                <label class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" disabled="disabled" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea id="description" asp-for="Description" disabled="disabled" placeholder="Your message..." class="form-control" style="height:180px;"></textarea>
            Maximum length of 500 characters.<br>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
@if (this.User.Identity.Name == Model.User.UserName)
{
<div class="form-group">
    <button id="update" class="btn btn-primary">Update</button>
</div>
}
    </form>
</div>
