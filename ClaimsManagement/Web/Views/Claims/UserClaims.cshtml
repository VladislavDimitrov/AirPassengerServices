@model UserClaimsViewModel
@{
    ViewData["Title"] = "UserClaims";
}

<h3>My Claims</h3>
@if (Model != null)
{
    @if (!(Model.Claims.Count == 0))
    {

        <table class="table table-hover">
            <tr style="background-color:lightblue">
                <th> Created At</th>
                <th> Title</th>
                <th> Airline</th>
                <th> Category</th>
                <th> Flight Number</th>
            </tr>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.CreatedAt </td>
                    <td>@claim.Title </td>
                    <td>@claim.Airline </td>
                    <td>@claim.Category </td>
                    <td>@claim.FlightNumber </td>
                    <td> <a asp-controller="Claims" asp-action="Details" asp-route-id="@claim.Id" class=" btn btn-primary"> Details</a> </td>
                </tr>
            }
        </table>
    }
}
else
{
    <p> You dont have submitted claims.</p>
}

